- content_for :sidebar do
  %ul.side-nav
    - @nuggets.each do |nugget|
      %li
        = image_tag nugget.favicon, class: 'feed-icon'
        %span= nugget.name


- @nuggets.each do |nugget|
  .row
    .large-12.columns.feed-title
      %h3= link_to nugget.name, nugget

  - nugget.fetch.each do |entry|
    .row
      .large-12.columns.feed-line
        %strong= entry.title
        %span.feed-summary= "#{strip_tags( entry.content || entry.summary)[0..60]} â€¦"

%br

= link_to 'New Nugget', new_nugget_path
