!!!
%html
  = render 'layouts/head'
  %body
      
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1
            = link_to "Nuggets", root_path
      %section.top-bar-section
        %ul.right
          - if user_signed_in?
            %li
              = link_to('Logout', destroy_user_session_path, :method => :delete)
          - else
            %li
              = link_to('Login', new_user_session_path)
    
    .row
      .large-12.columns= yield
    